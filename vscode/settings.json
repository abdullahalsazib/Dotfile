{
  // "editor.fontFamily": "'Monaspace Neon', monospace",
  // "editor.fontFamily": "'Monaspace Argon', monospace",
  // "editor.fontFamily": "'Monaspace Xenon', monospace",
  // "editor.fontFamily": "'Monaspace Krypton', monospace",
  // "editor.fontFamily": "'Monaspace Radon', monospace",
  // "editor.inlineSuggest.fontFamily": "'Monaspace Radon', monospace",
  "editor.fontFamily": "'Fira Code', 'Operator Mono', monospace",
  // "editor.fontFamily": "SF Mono",
  // for Windows
  "editor.fontSize": 14.4,
  "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09'",
  "editor.fontWeight": "460",
  "editor.wordWrap": "on",
  "workbench.colorTheme": "Default Dark+",
  // for gutter line
  // "javascript.updateImportsOnFileMove.enabled": "always",
  // "editor.guides.bracketPairs": true,
  "editor.lineHeight": 1.8,
  // end of my setting
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  // cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  // config related to code formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll.tslint": "always",
    "source.organizeImports": "always"
  },
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Fira Code, Operator Mono",
  // "workbench.colorTheme": "Community Material Theme Darker High Contrast",
  "workbench.iconTheme": "file-icons-mac",
  "window.commandCenter": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "window.customTitleBarVisibility": "windowed",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.guides.bracketPairsHorizontal": true,
  "database-client.autoSync": true,
  "files.autoSave": "afterDelay",
  "terminal.integrated.fontSize": 12,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.formatOnPaste": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "git.confirmSync": false,
  "workbench.secondarySideBar.defaultVisibility": "visible",
  "editor.showFoldingControls": "always",
  "editor.renderLineHighlight": "all",
  "workbench.layoutControl.enabled": false,

  "github.copilot.nextEditSuggestions.enabled": true,
  "emojisense.languages": {
    "python": true,
    "markdown": true,
    "plaintext": {
      "markupCompletionsEnabled": false,
      "emojiDecoratorsEnabled": false
    },
    "scminput": true,
    "git-commit": true,
    "tsx": true,
    "py": true
  },
  "workbench.panel.showLabels": false,
  "editor.mouseWheelZoom": true,
  "notebook.cellFocusIndicator": "border",
  "notebook.compactView": false,
  "terminal.integrated.inheritEnv": false,
  "explorer.confirmPasteNative": false,
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.pdf": "default"
  },
  "window.zoomLevel": 1,
  "editor.multiCursorModifier": "ctrlCmd",
  "chat.mcp.gallery.enabled": true,
  "diffEditor.codeLens": true,
  "window.confirmSaveUntitledWorkspace": false,
  "debug.gutterMiddleClickAction": "none",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  // "workbench.editor.showTabs": "none",
  "editor.formatOnType": true,
  "workbench.productIconTheme": "macos-modern",
  // macOS Modern Tweaks
  "editor.tabSize": 2,
  "window.titleBarStyle": "custom",
  "chat.tools.terminal.autoApprove": {
    "/^cd frontend && npm run build$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "npx": true
  },
  "workbench.colorCustomizations": {
    "terminal.background": "#00000000"
  },
  "workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations"]
}
